@model WebStore.Dto.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}
<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form">
                <!--login form-->
                <h2>Login to your account</h2>
                <form asp-action="Login" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="ReturnUrl" />
                    <input asp-for="UserName" placeholder="UserName" />
                    <input asp-for="Password" placeholder="Password" />
                    <span>
                        <input asp-for="RememberMe" class="checkbox">
                        Keep me signed in
                    </span>
                    <button type="submit" class="btn btn-default">Login</button>
                </form>
            </div><!--/login form-->
        </div>
    </div>
</section><!--/form-->
