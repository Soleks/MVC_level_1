@model IEnumerable<EmployeeView>

<table border="1">
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.FirstName</td>
        <td>@item.SurName</td>
        <td>@item.Patronymic</td>
        <td>@item.Age</td>
        
        <td>
            <a asp-action="Details" asp-route-id="@item.Id">Детали</a>
           @* @Html.ActionLink("Показать детали", "Details", new { id = item.Id })*@
        </td>
    </tr>
    }
</table>

